{
  "manifest_version": 3,
  "name": "Order ID Checker",
  "version": "1.0",
  "description": "Right-click order ID to check and view details automatically",
  "author": "rohanskm",
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
