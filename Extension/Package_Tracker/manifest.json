{
  "manifest_version": 3,
  "name": "Package Tracker",
  "version": "1.0",
  "description": "Right-click tracking number to track with USPS or UPS",
  "author": "rohanskm",
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tools.usps.com/*",
        "https://www.ups.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
